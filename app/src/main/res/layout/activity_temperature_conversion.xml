<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".temperatureConversionActivity">

    <Button
        android:id="@+id/convertButton"
        android:layout_width="122dp"
        android:layout_height="56dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="117dp"
        android:background="@drawable/button_style"
        android:onClick="convert"
        android:text="convert"
        app:layout_constraintBottom_toTopOf="@+id/celciusEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="119dp"
        android:layout_height="60dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="117dp"
        android:background="@drawable/button_style2"
        android:onClick="reset"
        android:text="reset"
        app:layout_constraintBottom_toTopOf="@+id/celciusEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/convertButton"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/celciusEditText"
        android:layout_width="362dp"
        android:layout_height="55dp"
        android:layout_marginTop="117dp"
        android:ems="10"
        android:hint="in degree celcius (C)"
        android:background="@drawable/text_background"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetButton" />

    <EditText
        android:id="@+id/fahrenheitEditText"
        android:layout_width="362dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="in degree fahrenheit (F)"
        android:background="@drawable/text_background"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celciusEditText" />

    <EditText
        android:id="@+id/kelvinEditText"
        android:layout_width="362dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="in kelvin (K)"
        android:background="@drawable/text_background"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fahrenheitEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>